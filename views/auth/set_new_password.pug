extends ../layout/index

block content
  body(style="background: linear-gradient(45deg,#2F353A,#01BBF1,#FF7E00)")
    main(style='max-width: 64rem; margin: auto; margin-top: 1rem;')
      div(style='padding-top: 1rem; text-align: center;')
        h1(style='text-align: center;')
          img(src='https://firebasestorage.googleapis.com/v0/b/funatics-1699583872359.appspot.com/o/imagen_2024-05-22_210857105.png?alt=media&token=081adb15-2a02-4314-973c-9bf67d267b44', style='height:auto; width: 200px; filter: drop-shadow(0 0 0.75rem #1e1e1e);')
        h2(style='font-size: 2rem; font-weight: 800; text-align: center; color: #00000; text-shadow: 1px 1px 3px #999999;') Reset Your Password
      div(style='margin: 3rem auto; max-width: 28rem;')
        div(style='background-color: #00000; padding: 2rem 4rem 3rem; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); border-radius: 0.5rem;')
          form(style='display: flex; flex-direction: column; gap: 1rem;', method='POST', autocomplete='off', novalidate='')
            div(style='display: flex; flex-direction: column;')
              label(style='font-size: 0.875rem; text-transform: uppercase; color: #0073e6; font-weight: 700; margin-bottom: 0.5rem;', for='password') Password
              input#password(style='width: 100%; border: 1px solid #0073e6; padding: 0.5rem 1rem; border-radius: 0.25rem; margin-bottom: 1rem; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);', type='password', placeholder='Password', name='password')
            div(style='display: flex; flex-direction: column;')
              label(style='font-size: 0.875rem; text-transform: uppercase; color: #0073e6; font-weight: 700; margin-bottom: 0.5rem;', for='repeat_password') Repeat Your Password
              input#repeat_password(style='width: 100%; border: 1px solid #0073e6; padding: 0.5rem 1rem; border-radius: 0.25rem; margin-bottom: 1rem; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);', type='password', placeholder='Repeat your password', name='repeat_password')
            div
              input(style='width: 100%; background-color: #0073e6; cursor: pointer; border: none; border-radius: 0.25rem; padding: 1rem 0; color: #ffffff; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); transition: background-color 0.2s ease-in-out, color 0.2s ease-in-out;', type='submit', value='Reset Password')
            div(style='display: flex; align-items: center; justify-content: space-between;')
